        <%= f.label :file_foto %>
        <%= f.number_field :file_foto %>
      </div>
      <div class="large-4 columns">
        <%= f.label :file_ci %>
        <%= f.number_field :file_ci %>
      </div>
      <div class="large-4 columns">
        <%= f.label :file_titulo %>
        <%= f.number_field :file_titulo %>
      </div>
    </div>




