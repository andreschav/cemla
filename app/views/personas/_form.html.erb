      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="row">
      <div class="large-9 columns">
      </div>
      <div class="large-3 columns">
        <%= f.label :sexo %>
        <%= f.text_field :sexo %>
      </div>
    </div>
    <div class="row">
      <div class="large-3 columns">
        <%= f.label :ci %>
        <%= f.text_field :ci, :placeholder=>"Cedula de Identidad" %>
      </div>
      <div class="large-3 columns">
        <%= f.label :nombre %>
        <%= f.text_field :nombre %>
      </div>
      <div class="large-3 columns">
        <%= f.label :apaterno %>
        <%= f.text_field :apaterno %>
      </div>
      <div class="large-3 columns">
        <%= f.label :amaterno %>
        <%= f.text_field :amaterno %>
      </div>


    </div>
    <div class="row">
      <div class="large-3 columns">
        <%= f.label :fono_ofi %>
        <%= f.text_field :fono_ofi %>
      </div>
      <div class="large-3 columns">
        <%= f.label :fono_casa %>
        <%= f.text_field :fono_casa %>
      </div>
      <div class="large-3 columns">
        <%= f.label :fono_movil %>
        <%= f.text_field :fono_movil %>
      </div>
    </div>


